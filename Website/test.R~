library(optparse)

option_list <- list(
   make_option("--input", action="store", dest="inputdir", help="Folder with CEL. files"),
   make_option("--output", action="store", dest="outputdir", help="Resultfolder"),
   make_option("--heatmap", action="store_true", default=FALSE, help="Heatmap"),
   make_option("--topo", action="store_true", default=FALSE, help="Topographical image"),
   make_option("--hist", action="store_true", default=FALSE, help="hisograms"))

opt <- parse_args(OptionParser(option_list=option_list))
a=NA;
if(opt$heatmap){
	a=7;
	b=a+3;
	print(b);
	
}
if(length(opt$input)==0){
	print("Kein Topo");
}
if(length(opt$input)>0){
	print(opt$input);
}

